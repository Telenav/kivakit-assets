@startuml

    !include lexakai.theme
    
    title "com.telenav.kivakit.kernel.language.threading.status"
    
    class ReentrancyTracker
    {
        --
        +boolean enter()
        --(checks)--
        +boolean hasReentered()
        --(lifecycle)--
        +void exit()
    }
    
    ThreadSnapshot "1" o-- "*" ThreadStatus
    class ThreadSnapshot
    {
        --(constructors)--
        +ThreadSnapshot()
        --
        +ThreadSnapshot update()
        --(collection)--
        +List<ThreadStatus> snapshot()
        --(time)--
        +Time capturedAt()
        +Duration cpuTime()
        +Duration cpuTime(Thread)
        +Duration totalCpuTime()
    }
    
    class ThreadStatus
    {
        --
        +Thread.State state()
        --(checks)--
        +boolean isDaemon()
        +boolean isKivaKit()
        --(identity)--
        +long identifier()
        --(naming)--
        +String name()
        --(time)--
        +Duration cpuTime()
    }
    
    enum WakeState
    {
        COMPLETED
        INTERRUPTED
        TERMINATED
        TIMED_OUT
    }
    
@enduml

