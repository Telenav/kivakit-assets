@startuml

    !include lexakai.theme
    
    title "diagram-life-cycle"
    
    interface Operation
    {
        --(lifecycle)--
        +boolean isRunning()
    }
    
    interface Operation
    Operation <|-- Pausable
    interface Pausable
    {
        --(checks)--
        +boolean isPaused()
        --(lifecycle)--
        +void pause()
        +void resume()
    }
    
    interface Resettable
    {
        --(lifecycle)--
        +void reset()
    }
    
    interface Operation
    Operation <|-- Startable
    interface Startable
    {
        --(lifecycle)--
        +boolean start()
    }
    
    interface Operation
    Operation <|-- Stoppable
    interface Stoppable
    {
        --(lifecycle)--
        +void stop(LengthOfTime wait)
        +void stop()
    }
    
@enduml

