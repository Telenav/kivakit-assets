    ServiceRegistryClient --> Scope : "searches within"
    class ServiceRegistryClient
    {
        --(constructors)--
        +ServiceRegistryClient()
        --(identity)--
        +Result<Set<ApplicationIdentifier>> discoverApplications(Scope)
        +Version version()
