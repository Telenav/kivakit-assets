        +KivaKitPanel configureShadedPanel(KivaKitPanel)
        +KivaKitPanel configureShadedSubPanel(KivaKitPanel)
        --(messaging)--
        +void popupInformation(JFrame, String title, String message)
        --(search)--
        +JTextField configureSearchField(JTextField)
    }
    
