        +Font tableFont()
        #KivaKitTheme theme()
        #Box verticalCenter(JComponent)
        --(checks)--
        +boolean isDark()
        --(collection)--
        +JList<T> configure(JList<T>)
        --(factory)--
        +JButton newButton(String text, ActionListener)
        +JButton newButton(String text)
